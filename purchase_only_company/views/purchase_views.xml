<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_contact_form" model="ir.ui.view">
        <field name="name">purchase.order.contact.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="partner_contact_id" context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}" domain="[('supplier','=',True)]"/>
            </field>
        </field>
    </record>
</odoo>